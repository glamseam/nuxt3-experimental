{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "public"
    ]
}
